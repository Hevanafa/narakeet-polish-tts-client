<Window x:Class="AudioPlayer"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:NarakeetPolishDemo"
        mc:Ignorable="d"
        Title="AudioPlayer" Height="450" Width="320" Loaded="Window_Loaded">
    <Grid>
        <ListBox x:Name="lsbAudioFiles" Margin="5,136,5,5" d:ItemsSource="{d:SampleData ItemCount=5}"/>
        <Slider x:Name="sldPlayer" Height="25" Margin="5,41,5,0" VerticalAlignment="Top" d:LayoutOverrides="HorizontalAlignment" LargeChange="5" SmallChange="1"/>
        <Button x:Name="btnPlayPause" Content="Play / Pause" Height="50" Margin="5,76,0,0" Width="50" HorizontalAlignment="Left" d:LayoutOverrides="Width, Height" VerticalAlignment="Top"/>
        <Button x:Name="btnStop" Content="Stop" Height="50" Margin="65,76,0,0" Width="50" HorizontalAlignment="Left" VerticalAlignment="Top" d:LayoutOverrides="HorizontalAlignment, Height"/>
        <Label x:Name="lblPlayerTime" Content="0:00 / 0:00" Height="50" Margin="185,76,5,0" Width="130" VerticalAlignment="Top" FontSize="16"/>
        <Label x:Name="lblCurrentItem" Content="(no played audio)" Height="26" Margin="5,5,5,0" d:LayoutOverrides="HorizontalAlignment, Height" VerticalAlignment="Top"/>

    </Grid>
</Window>
